@model UpdateVenueViewModel

@{
    ViewData["Title"] = "UpdateVenue";
}

<br />

<h4>Update Venue Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateVenue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type ="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="VenueName" class="control-label">Venue Name:</label>
                <input asp-for="VenueName" class="form-control" />
                <span asp-validation-for="VenueName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Address" class="control-label">Address:</label>
                <textarea asp-for="Address" class="form-control">   </textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="SeatCapacity" class="control-label">Seat Capacity:</label>
                <input asp-for="SeatCapacity" class="form-control" />
                <span asp-validation-for="SeatCapacity" class="text-danger"></span>
            </div>          
            <div class="form-group mt-3">
                <input type="submit" value="Update" class="btn btn-outline-primary" />
                <a asp-action="VenueList" class="btn btn-outline-secondary">Back</a>

            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
