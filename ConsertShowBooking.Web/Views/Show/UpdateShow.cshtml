@model ConsertShowBooking.Web.ViewModels.ShowViewModels.UpdateShowViewModel

@{
    ViewData["Title"] = "UpdateShow";
}

<br />

<h4>Update Concert Details</h4>
<hr />
<div class="row">
    <div class="col-4">
        <div class="form-group">
            <img src="@Model.ImageUrl" width="600" height="500" />
        </div>
    </div>
    <div class="col-6 offset-2">
        <form asp-action="UpdateShow" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ShowName" class="control-label">Show Name:</label>
                <input asp-for="ShowName" class="form-control" />
                <span asp-validation-for="ShowName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Description" class="control-label">Description:</label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ShowDate" class="control-label">Date:</label>
                <input asp-for="ShowDate" class="form-control" />
                <span asp-validation-for="ShowDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ChooesFile" class="control-label">Add File:</label>
                <input asp-for="ChooesFile" class="form-control" />
                <span asp-validation-for="ChooesFile" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="VenueId" class="control-label">Venue:</label>
                <select asp-for="VenueId" class="form-control" asp-items="@ViewBag.venueList">
                    <option value="" disabled selected>-- select venue --</option>
                </select>
                <span asp-validation-for="VenueId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ArtistId" class="control-label">Artist:</label>
                <select asp-for="ArtistId" class="form-control" asp-items="@ViewBag.artistList">
                    <option value="" disabled selected>-- select artist --</option>
                </select>
                <span asp-validation-for="ArtistId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Update" class="btn btn-outline-primary" />
                <a asp-action="ShowsList" class="btn btn-outline-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
