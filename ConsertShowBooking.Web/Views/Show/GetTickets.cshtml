@model IEnumerable<ConsertShowBooking.Web.ViewModels.DashboardViewModels.DashboardTicketViewModel>

@{
    var totalTickets = Model.Sum(m => m.SeatNo.Split(',').Length); // Calculate total tickets
}

<div class="container mt-5">
    <h4>Admin Dashboard</h4>
    <hr />
    <div>
        <table class="table table-hover">
            <thead>
                <tr class="table-active">
                    <th scope="col">User Name</th>
                    <th scope="col">Show Name</th>
                    <th scope="col">Seat Numbers</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.ShowName</td>
                        <td>@item.SeatNo</td>
                    </tr>
                }
            </tbody>
            
            <tfoot>
                <tr class="table-active">
                    <td colspan="2" class="fw-bolder text-info">Total Tickets:</td> <!-- colspan="2" to span 2 columns -->
                    <td class="fw-bolder text-info">@totalTickets</td> <!-- Display total ticket count -->
                </tr>
            </tfoot>
        </table>
    </div>
</div>
